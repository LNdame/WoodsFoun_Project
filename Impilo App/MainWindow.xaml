                    </LinearGradientBrush>
                </Grid.Background>
                <!--<pageTransitions:PageTransition Name="pageTransitionControl"  Margin="25"  />-->
                <pageTransitions:PageTransition Name="pageTransitionControl" Margin="10,10,30,20" />
            </Grid>
